Config
    { position = TopW L 100
    , commands =
        -- e.g., Sun Jun  9 11:40 BST 2019
      [ Run Date "%a %b %_d %H:%M %Z %Y" "date" 10
      , Run Memory [
          "-t", "Mem: <usedratio>%"
        , "--High", "90"
        , "--high", "red"
        ] 10
      , Run MultiCpu ["-t", "CPU: <autovbar>"] 50
      , Run Battery [
          "-t", "<left>% (<watts> :: <timeleft>)"
        , "--High", "80"
        , "--Low", "30"
        , "--low", "red"
        ] 10
      , Run Wireless "wlan0" [] 10
      , Run StdinReader
      ]
    , alignSep = "}{"
    , template = "%StdinReader% }{ %date% | %memory% | %multicpu% | %battery% | %wlan0wi%"
    , font = "xft:-PfEd-Inconsolata-normal-normal-normal-*-19-*-*-*-m-0-iso10646-1"
    }
