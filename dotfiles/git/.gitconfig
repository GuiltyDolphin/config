[user]
  name = Ben Moon
  email = guiltydolphin@gmail.com
[core]
  editor = vim
  autocrlf = input
  safecrlf = true
[merge]
  tool = vimdiff
[alias]
  br = branch
  cb = checkout -b
  ci = commit
  cian = commit --amend --no-edit
  cim = commit -m
  co = checkout
  dfs = diff --staged
  dump = cat-file -p
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  last = log -1 HEAD
  qlog = log --pretty=oneline
  ri = rebase -i
  st = status
  type = cat-file -t
  unstage = reset HEAD --
